# Server environment configuration (copy to .env and update values)
# NOTE: Do NOT commit secrets to version control.

# Server
PORT=5000
NODE_ENV=development

# MongoDB URI (default local)
MONGO_URI=mongodb://localhost:27017/voting_system

# JWT secret for auth tokens (change in production)
JWT_SECRET=change-me-in-prod

# Admin registration key (optional)
ADMIN_REGISTRATION_KEY=

# Blockchain RPC endpoint (local dev chain / hardhat / ganache)
BLOCKCHAIN_RPC=http://127.0.0.1:8545

# Deployed voting contract address (set when deployed)
# VOTING_CONTRACT_ADDRESS=0xYourContractAddress

# If you want to skip trying to connect to a DB in dev, set SKIP_DB=true
# but many features will be disabled or will return errors.
SKIP_DB=false

# When true, the server will not start a real blockchain listener and will use mocked behavior
BLOCKCHAIN_MOCK=false

# Optional: allow the API to be called from a browser client running at this origin
CLIENT_ORIGIN=http://localhost:5173

# Log level: error, warn, info, debug
LOG_LEVEL=info
