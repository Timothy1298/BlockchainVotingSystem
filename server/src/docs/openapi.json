{
  "openapi": "3.0.0",
  "info": {
    "title": "Blockchain Voting System API",
    "version": "0.1.0",
    "description": "OpenAPI spec for the Voting backend (partial)."
  },
  "servers": [{ "url": "/api" }],
  "paths": {
    "/auth/login": {
      "post": {
        "summary": "Login",
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Login" } } } },
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/votes/vote": {
      "post": {
        "summary": "Cast a vote (DB or on-chain depending on config)",
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Vote" } } } },
        "responses": { "200": { "description": "OK" } }
      }
    }
  },
  "components": {
    "schemas": {
      "Login": {
        "type": "object",
        "properties": { "email": { "type": "string" }, "password": { "type": "string" } },
        "required": ["email", "password"]
      },
      "Vote": { "type": "object", "properties": { "electionId": { "type": "string" }, "candidateId": { "type": "string" } }, "required": ["electionId","candidateId"] }
    }
  }
}
